<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        tools:context=".MainActivity"
        android:background="@color/white"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="MONDAY"
            android:textSize="32sp"
            android:paddingRight="26dp"
            android:paddingLeft="26dp"
            android:textStyle="bold"
            android:fontFamily="@font/sf_heavy"
            android:id="@+id/headerDay"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noMedicinesContainer">

        <TextView
                android:text="@string/main_no_meds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:fontFamily="@font/sf_medium"
                android:textSize="24sp"
                tools:text="@string/main_no_meds"
                android:textColor="@color/disabledTextColor"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="26dp"
            android:id='@+id/nextReminderWidget'>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_background"
                android:orientation="vertical"
                android:paddingRight="48dp"
                android:paddingLeft="18dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/textColor"
                    android:text="@string/main_next_reminder"
                    android:fontFamily="@font/sf_regular"
                    android:layout_marginBottom="-8dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nextReminderTimeTextView"
                        android:textSize="20sp"
                        android:textColor="@color/textColor"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/sf_heavy"/>

                <TextView
                        android:text=" tonight, "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/textColor"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/sf_regular"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nextReminderNumMedsTextView"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/textColor"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/sf_heavy"/>

                <TextView
                        android:text=" medications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/textColor"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/sf_regular"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="16dp"
            android:paddingLeft="26dp"
            android:id="@+id/recyclerView"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"/>

    <Button
            android:text="@string/create_new_medication"
            android:background="@drawable/outline_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/blueButtonColor"
            android:textSize="18sp"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/createMedicationButton"/>

    <Button
            android:text="SCAN MEDICATION"
            android:background="@drawable/outline_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/blueButtonColor"
            android:textSize="18sp"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:id="@+id/scanMedicationButton"/>

</LinearLayout>