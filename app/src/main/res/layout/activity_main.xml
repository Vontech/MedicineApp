<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        tools:context=".MainActivity" android:background="#F8F8F8">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textColor="@color/textColor" android:text="MONDAY" android:textSize="28sp"
              android:paddingRight="26dp"
              android:paddingLeft="26dp"
              android:textStyle="bold" android:fontFamily="@font/open_sans_extrabold" android:id="@+id/headerDay"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:paddingRight="26dp"
              android:paddingLeft="26dp"
              android:textColor="@color/textColor" android:text="@string/main_next_reminder" android:textSize="20sp"
              android:textStyle="bold" android:fontFamily="@font/open_sans_semibold" android:layout_marginTop="20dp"/>

    <LinearLayout
            android:paddingRight="26dp"
            android:paddingLeft="26dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="8pm "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="22sp" android:textColor="@color/textColor" android:textAlignment="viewStart"
                android:layout_weight="0" android:textStyle="bold" android:fontFamily="@font/open_sans_bold"/>
        <TextView
                android:text="tonight, 3 medications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                android:textSize="22sp" android:textColor="@color/textColor" android:textAlignment="viewStart"
                android:fontFamily="@font/open_sans"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginTop="16dp"
            android:paddingLeft="26dp"
            android:id="@+id/recyclerView"
            android:layout_weight="0" android:orientation="horizontal" android:layout_marginBottom="16dp"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/markAsTaken" android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp" android:minHeight="0dp"
            android:text="MARK ALL 3 AS TAKEN" android:fontFamily="@font/open_sans_bold"
            android:backgroundTint="@color/blueButtonColor" android:textColor="@android:color/white"
            android:textSize="18sp"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/newMedicationButton" android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:text="Add New Medication" android:fontFamily="@font/open_sans_semibold"
            android:backgroundTint="@color/blueButtonColor" android:visibility="gone"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/scanMedicationButton" android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:text="Scan New Medication" android:fontFamily="@font/open_sans_semibold"
            android:backgroundTint="@color/blueButtonColor" android:visibility="gone"/>

</LinearLayout>