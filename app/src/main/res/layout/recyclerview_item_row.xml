<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
            android:layout_width="@dimen/mainScreenPillSize"
            android:layout_height="@dimen/mainScreenPillSize"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:textSize="20sp"
            android:text="Medication Name"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans_bold"
            android:textAlignment="viewStart"
            android:paddingTop="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doseTextView"
            android:textSize="18sp"
            android:text="Dose amount"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/textColor"
            android:textAlignment="viewStart"/>

    <Button
            android:text="@string/click_once_taken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/markAsDoneButton"
            android:backgroundTint="@color/blueButtonColor"
            android:textColor="@color/mainCardBackground"
            android:minHeight="0dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"/>

</LinearLayout>