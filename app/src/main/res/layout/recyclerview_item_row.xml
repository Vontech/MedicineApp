<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="18dp"
    android:layout_marginStart="0dp"
    android:outlineSpotShadowColor="#AA000000"
    android:outlineAmbientShadowColor="#AA000000"
    android:layout_marginEnd="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#F8F8F8">

    <LinearLayout
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <ImageView
                android:layout_width="@dimen/mainScreenPillSize"
                android:layout_height="@dimen/mainScreenPillSize"
                app:srcCompat="@drawable/placeholder"
                android:id="@+id/imageView"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView"
                android:textSize="20sp"
                android:text="Medication Name"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:fontFamily="@font/open_sans_bold"
                android:textAlignment="viewStart"
                android:paddingTop="8dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doseTextView"
                android:textSize="18sp"
                android:text="Dose amount"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/textColor"
                android:textAlignment="viewStart"/>

        <Button
                android:text="@string/click_once_taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/markAsDoneButton"
                android:backgroundTint="@color/blueButtonColor"
                android:textColor="@color/mainCardBackground"
                android:minHeight="0dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
